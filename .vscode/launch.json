{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: compile:sass",
            "request": "launch",
            "command": "npm run compile:sass",
            "cwd": "${workspaceFolder}"
        }
    ]   
}